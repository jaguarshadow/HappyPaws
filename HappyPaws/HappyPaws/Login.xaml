<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyPaws.Login">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="CenterAndExpand" Padding="0, 50, 0, 0">
                <Label Text="Happy Paws" FontSize="36" TextColor="DarkSlateGray" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                <Label Text="Pet Sitting Service" VerticalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout Padding="80, 30, 80, 0">
                <Label Text="Log In" FontAttributes="Bold"/>
                <Entry x:Name="userEntry"/>
                <Label Text="Username" Margin="0, -10, 0, 0"/>
                <Entry x:Name="passEntry" IsPassword="True"/>
                <Label Text="Password" Margin="0, -10, 0, 0"/>
                <Button x:Name="loginButton"  Text="Log In" Clicked="Login_Clicked" HorizontalOptions="CenterAndExpand" WidthRequest="75"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>